@model IEnumerable<e_commerce.Models.Category>

@{
    ViewBag.Title = "Category List";
}

<div class="container"> 
    <div class="row pt-4 pb-4">
    <div class="col-6">
        <h2 class="text-primary">
            Category List
        </h2>

    </div>
    <div class="col-6 text-end">
        <a asp-controller="" asp-action="" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Category
        </a>

    </div>
    </div>


<table class="table table-bordered table-striped" >
    <tr>
        <th>id</th>
        <th>Category Name</th>
        <th>Description</th>
        <th>Createat</th>
        <th>updateat</th>
    </tr>
@foreach (var item in Model)

{
    
            <tr><td>@item.Id</td><td>@item.Name</td><td>@item.Description</td><td>@item.CreatedAt</td><td>@item.CreatedAt</td></tr>
}
</table>

</div>
